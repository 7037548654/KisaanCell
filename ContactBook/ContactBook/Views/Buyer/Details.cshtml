@using Microsoft.AspNetCore.Http;
@model ContactBook.Models.Contact
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item)
        </dd>
        <dt class="col-sm-2">
            Uploaded By
        </dt>
        <dd class="col-sm-10">
            @Convert.ToString(Context.Session.GetString("FarmerName"))
        </dd>
        <dt class="col-sm-2">
            ContactNo.
        </dt>
        <dd class="col-sm-10">
            @Convert.ToString(Context.Session.GetString("Mobile"))
        </dd>

        <dt class="col-sm-2">
            Quantity(in Kg)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Price(in Rs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Location of Item 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>
</div>
